<Window x:Class="withDBSql.Dogovor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:withDBSql"
        mc:Ignorable="d"
        Title="Dogovor" Height="350" Width="400">
    <Grid>
        <Label Content="Введите ID пользователя:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserId" HorizontalAlignment="Left" Height="23" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Выберите дату:" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="250"/>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="10,65,0,10" VerticalAlignment="Bottom" Width="100" Click="btnCreate_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Right" Margin="0,65,10,10" VerticalAlignment="Bottom" Width="100" Click="btnCancel_Click" Cursor="Hand"/>
    </Grid>
</Window>
