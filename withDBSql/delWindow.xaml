<Window x:Class="withDBSql.delWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User" Height="150" Width="350">
    <Grid>
        <Label Content="Введите ID пользователя:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserId" HorizontalAlignment="Left" Height="23" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="85" Click="btnDelete_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Right" Margin="0,65,10,0" VerticalAlignment="Top" Width="85" Click="btnCancel_Click" Cursor="Hand"/>
    </Grid>
</Window>